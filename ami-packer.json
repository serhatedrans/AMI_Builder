{
    "variables": {
        "aws_ami_name": "app-{{timestamp}}",
        "environment": "{{ env `environment`}}",
        "role": "{{ env `role`}}",
        "region": "{{ env `region`}}"
    },

    "builders": [{
        "name": "packer-{{ user `environment` }}-{{ user `role` }}-{{timestamp}}",
        "type": "amazon-ebs",
        "region": "{{user `region`}}",
        "instance_type": "t2.micro",
        "ssh_pty": "true",
        "ssh_username": "ec2-user",
        "ami_name": "{{ user `environment` }}-{{ user `role` }}-{{timestamp}}",
        "ami_description": "Customized Amazon Linux",
        "associate_public_ip_address": "true",
        "iam_instance_profile": "r_packer",
        "tags": {
          "environment": "{{ user `environment` }}",
          "role": "{{ user `role` }}"
        },
        "run_tags": {
          "Name": "packer-{{ user `environment` }}-{{ user `role` }}-{{timestamp}}",
          "environment": "{{ user `environment` }}",
          "role": "{{ user `role` }}"
        },
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn-ami-hvm*-ebs",
                "root-device-type": "ebs"
            },
            "owners": ["137112412989"],
            "most_recent": true
        }
    }],

    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo yum update -y",
				        "sudo /usr/sbin/update-motd --disable",
                "echo 'No unauthorized access permitted' | sudo tee /etc/motd",
                "sudo rm /etc/issue",
                "sudo ln -s /etc/motd /etc/issue",
                "sudo yum install -y elinks screen"
            ]
        }
    ]
}
